<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mattiyah{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> 
    <link rel="stylesheet" href="{{ asset('styles/couleur.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"> 
</head>
<body>
<p>Connecté ? {{ app.user ? 'Oui' : 'Non' }}</p>

    <header class="bg-white">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center py-3">
                <!-- Logo -->
                <a class="navbar-brand" href="{{ path('accueil') }}">
                <img src="{{ asset('img/LogoMattiyah.png') }}" alt="Logo Mattiyah" width="120px">
                </a>
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-light w-100">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            <!-- Liens centrés -->
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('services') }}">Services</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('apropos') }}">À propos</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('prendre_rdv') }}">Prendre RDV</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="{{ path('faq') }}">FAQ</a>
                            </li>
                        </ul>

                        <!-- Liens à droite -->
                        <ul class="navbar-nav ms-auto">
                            {% if app.user %}
                                <li class="nav-item ms-4">
                                    <span class="nav-link"><i class="bi bi-person-circle"></i> Mon profil</span>
                                </li>
                                <li class="nav-item ms-4">
                                    <a class="nav-link" href="{{ path('deconnexion') }}">Déconnexion</a>
                                </li>
                            {% else %}
                                <li class="nav-item ms-4">
                                    <a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
                                </li>
                                <li class="nav-item ms-4">
                                    <a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <!-- Contenu principal -->
    <main class="">
        {% block body %}{% endblock %}
   </main>

    <!-- Footer -->
    <footer class="fondvert text-white mt-auto padding_200">
  <div class="container text-center">
    <p class="mb-1">© {{ "now"|date("Y") }} Mattiyah</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="{{ path('accueil') }}" class="text-white">Accueil</a></li>
      <li class="list-inline-item"><a href="{{ path('services') }}" class="text-white">Services</a></li>
      <li class="list-inline-item"><a href="{{ path('apropos') }}" class="text-white">À propos</a></li>
      <li class="list-inline-item"><a href="{{ path('prendre_rdv') }}" class="text-white">Prendre RDV</a></li>
      <li class="list-inline-item"><a href="{{ path('contact') }}" class="text-white">Contact</a></li>
      <li class="list-inline-item"><a href="{{ path('faq') }}" class="text-white">Contact</a></li>
    </ul>
  </div>
  
</footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script src="{{ asset('js/prendre-rdv.js') }}"></script>
{% endblock %} 
</body>
</html>
