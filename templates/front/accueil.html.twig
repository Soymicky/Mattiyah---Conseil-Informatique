    <span class="fondjaune p-2 textvert texttresgras" >Systèmes Informatiques</h5></span>
    <div class="row py-4 my-4">
      {% for service in services %}
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Image de service">
          <div class="card-body">
            <h6 class="card-title">{{ service.nom }}</h6>
            <p class="card-text">{{service.description}}.</p>
            <ul class="list-unstyled">
            {% for motcle in service.motcle %}
                 <li>✅ {{motcle}}</li> 
            {% endfor %}
            </ul>
        
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0"><strong>À partir de</strong> {{ service.prix }}</p>
                <a href="{{ path('services', {'slug': service.slug}) }}" class="btn btn-primary btn-sm">Voir plus</a>
              </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

     {# Tableau et tableau associatif de logiciels #}
     {% set logiciels = [
