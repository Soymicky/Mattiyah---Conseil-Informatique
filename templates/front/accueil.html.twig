    <!-- Logiciels informatiques -->
    <h5 class="text-warning text-center mb-3">
    <span class="fondjaune p-2 textvert texttresgras " >Logiciels Informatiques</h5></span>
    <div class="row my-4 py-4">
      {% for logiciel in logiciels %}
        <div class="col-md-4 mb-3">
        <div class="card h-100 mt-3">
          <img src="https://via.placeholder.com/300x150" class="card-img-top" alt="Image de service">
          <div class="card-body">
            <h6 class="card-title">{{ logiciel.nom }}</h6>
            <p class="card-text">{{logiciel.description}}.</p>
            <ul class="list-unstyled">
            {% for motcle in logiciel.motcle %}
                 <li>✅ {{motcle}}</li> 
            {% endfor %}
            </ul>
        
            <div class="d-flex justify-content-between align-items-center">
