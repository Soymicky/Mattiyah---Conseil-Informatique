{# ESPACE COMMENTAIRE #}

<section class="py-5">
    <div class="container">
        <h4 class="text-center mb-4">Avis de nos clients</h4>
        {% set avis_clients = [
            {
                'photo_profil': 'https://via.placeholder.com/80/FFC107/FFFFFF?Text=Client1',
                'prenom': 'Jean',
                'nom': 'Dupont',
                'note': 5,
                'service_concerne': ' Support et dépannage logiciel',
                'date': date('20-05-2025'),
                'heure': date('10:30'),
                'commentaire': 'Excellent premier contact ! Très professionnel et à l\'écoute de mes besoins. Je recommande vivement.'
            },
            {
                'photo_profil': 'https://via.placeholder.com/80/28A745/FFFFFF?Text=Client2',
                'prenom': 'Sophie',
                'nom': 'Martin',
                'note': 4,
                'service_concerne': 'Audit et optimisation IT',
                'date': date('20-05-2025'),
                'heure': date('14:00'),
                'commentaire': 'L\'aide apportée pour le choix de logiciel a été très précieuse. Un accompagnement de qualité.'
