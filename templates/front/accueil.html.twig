                <a href="{{ path('services', {'slug': logiciel.slug}) }}"class="noline texttresgras">Voir plus</a>
              </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    <div class="text-center mt-4  fondjaune boutton_style1 d-flex justify-content-center align-items-center">
    <a href="{{ path('services') }}" class="noline texttresgras textvert fs-5">Voir en details</a>
    </div>
  </div>
</section>

<!-- A PROPOS -->
